{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@requil/config/typescript/node.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
