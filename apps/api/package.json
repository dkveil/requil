{
	"name": "@requil/api",
	"version": "1.0.0",
	"private": true,
	"main": "app.ts",
	"scripts": {
		"test": "npm run build && tsc -p test/tsconfig.json && c8 node --test -r ts-node/register \"test/**/*.ts\"",
		"start": "npm run build && fastify start -l info dist/index.js",
		"start:prod": "node ./dist/index.js --env-file=.env",
		"build": "rimraf dist && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"watch": "tsx -w",
		"dev": "tsx watch src/index.ts",
		"dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/index.js",
		"lint": "biome check",
		"format": "biome format --write",
		"type-check": "tsc --noEmit"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@fastify/autoload": "^6.0.0",
		"@fastify/sensible": "^6.0.0",
		"fastify": "^5.0.0",
		"fastify-cli": "^7.4.0",
		"fastify-plugin": "^5.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.1",
		"@tsconfig/node22": "^22.0.2",
		"@types/node": "^22.1.0",
		"c8": "^10.1.2",
		"concurrently": "^9.0.0",
		"fastify-tsconfig": "^3.0.0",
		"rimraf": "^6.0.1",
		"ts-node": "^10.4.0",
		"tsc-alias": "^1.8.16",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.20.6",
		"typescript": "~5.8.2"
	}
}
