	"scripts": {
		"test": "npm run build && tsc -p test/tsconfig.json && c8 node --test -r ts-node/register \"test/**/*.ts\"",
		"predev": "node -e \"try { require('child_process').execSync('for /f \\\"tokens=5\\\" %a in (\\'netstat -ano ^| findstr :8121\\') do taskkill //F //PID %a', {shell: true, stdio: 'inherit'}); } catch(e) {}\"",
		"dev": "tsx watch src --env-file=.env | pino-pretty",
		"start:prod": "node ./dist/index.js --env-file=.env",
		"build": "rm -rf ./dist && tsc --project tsconfig.build.json && resolve-tspaths -p tsconfig.build.json -s ./src -o ./dist",
		"build:ts": "tsc",
		"lint": "biome check",
		"format": "biome format --write",
		"type-check": "tsc --noEmit"
	},
