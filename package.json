{
	"name": "requil",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"ci:check": "biome ci .",
		"type-check": "turbo run type-check",
		"test": "turbo run test",
		"pre-commit:check": "pnpm run check && pnpm run type-check && pnpm run test",
		"pre-push:check": "pnpm run ci:check && pnpm run type-check && pnpm run test && pnpm run build",
		"validate": "pnpm run pre-push:check",
		"clean": "turbo run clean",
		"clean:all": "turbo run clean --all",
		"clean:install": "pnpm run clean:modules && pnpm install",
		"clean:modules": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules && rm -rf .turbo",
		"prepare": "lefthook install",
		"test:projects": "vitest run",
		"test:projects:watch": "vitest --watch",
		"e2e": "turbo run e2e",
		"e2e:smoke": "turbo run e2e:smoke",
		"db:pull": "turbo run db:pull",
		"db:push": "turbo run db:push",
		"db:generate": "turbo run db:generate",
		"db:migrate": "turbo run db:migrate",
		"db:studio": "turbo run db:studio",
		"db:drop": "turbo run db:drop",
		"db:check": "turbo run db:check",
		"db:up": "turbo run db:up",
		"postinstall": "turbo build --filter='./packages/*'"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"lefthook": "^1.13.6",
		"turbo": "^2.5.8",
		"typescript": "5.9.3"
	},
	"packageManager": "pnpm@10.6.5",
	"engines": {
		"node": ">=22"
	}
}
