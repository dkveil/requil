{
	"name": "relettr",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"ci:check": "biome ci .",
		"type-check": "turbo run type-check",
		"clean": "turbo run clean",
		"clean:all": "turbo run clean --all",
		"clean:install": "pnpm run clean:modules && pnpm install",
		"clean:modules": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules && rm -rf .turbo",
		"prepare": "lefthook install"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"lefthook": "^1.13.6",
		"turbo": "^2.5.8",
		"typescript": "5.9.2"
	},
	"packageManager": "pnpm@10.6.5",
	"engines": {
		"node": ">=22"
	}
}
