{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"concurrency": "20",
	"globalDependencies": ["biome.json"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"],
			"cache": true,
			"inputs": ["**/*.{js,jsx,ts,tsx,json}", "biome.json"]
		},
		"type-check": {
			"dependsOn": ["^type-check"],
			"cache": true,
			"inputs": ["**/*.{ts,tsx}", "tsconfig.json"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["^build"],
			"cache": true,
			"inputs": ["src/**/*.{ts,tsx}", "**/*.test.{ts,tsx}"],
			"outputs": ["coverage/**"]
		},
		"db:pull": {
			"cache": false
		},
		"db:push": {
			"cache": false
		},
		"db:generate": {
			"cache": false,
			"inputs": ["src/schema/**/*.ts", "drizzle.config.ts"],
			"outputs": ["src/migrations/**"]
		},
		"db:migrate": {
			"cache": false
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:drop": {
			"cache": false
		},
		"db:check": {
			"cache": false,
			"inputs": ["src/schema/**/*.ts", "src/migrations/**"]
		},
		"db:up": {
			"cache": false
		}
	}
}
